<Window Name="windowMain" x:Class="ScrumProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrumProject"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="Window_Loaded">
    <Grid Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="425*"/>
            <RowDefinition Height="81*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btnStart" Grid.ColumnSpan="2" Content="Start" Grid.Row="1" Width="75" Height="61" Click="btnStart_Click"/>
        <ListBox Name="lbxGames" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="lbxGames_SelectionChanged"/>
        
    </Grid>
</Window>
