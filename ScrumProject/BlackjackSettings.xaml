<UserControl x:Class="ScrumProject.BlackjackSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScrumProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="202*"/>
            <ColumnDefinition Width="202*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="307*"/>
        </Grid.RowDefinitions>
        <ComboBox Name="cmbxPlayerCount" Margin="10,10,10,9.8" SelectionChanged="cmbxPlayerCount_SelectionChanged"/>
        <CheckBox Name="cbxWithHouse" Content="Play with house?" Grid.Column="1" Height="29" Width="144" Checked="cbxWithHouse_CheckChanged" Unchecked="cbxWithHouse_CheckChanged"/>
        <UniformGrid Name="ugridPlayerNames" Grid.Row="1" Grid.ColumnSpan="2">

        </UniformGrid>
    </Grid>
</UserControl>
